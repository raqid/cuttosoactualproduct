{
  "manifest_version": 3,
  "name": "Cuttoso",
  "version": "1.0.0",
  "description": "Find manufacturer-direct deals on Amazon products",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://smile.amazon.com/*",
    "http://localhost:3000/*",
    "https://cuttoso.com/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://smile.amazon.com/*"
      ],
      "js": ["content/amazon.js"],
      "run_at": "document_idle"
    }
  ],
  "options_page": "options/index.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
